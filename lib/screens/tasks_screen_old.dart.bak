  Widget _buildTabBar() {
    return Container(
      margin: const EdgeInsets.symmetric(horizontal: 16),
      decoration: BoxDecoration(
        color: Colors.grey.shade100,
        borderRadius: BorderRadius.circular(25),
      ),
      child: StreamBuilder<QuerySnapshot>(
        stream: _firestore
            .collection('tasks')
            .where('assignedTo', isEqualTo: widget.user.uid)
            .snapshots(),
        builder: (context, snapshot) {
          int pendingCount = 0;
          int inProgressCount = 0;
          int completedCount = 0;

          if (snapshot.hasData) {
            final tasks = snapshot.data!.docs;
            pendingCount =
                tasks.where((doc) => doc['status'] == 'pending').length;
            inProgressCount =
                tasks.where((doc) => doc['status'] == 'in_progress').length;
            completedCount =
                tasks.where((doc) => doc['status'] == 'completed').length;
          }

          return TabBar(
            controller: _tabController,
            indicator: BoxDecoration(
              gradient: LinearGradient(
                colors: [Colors.green.shade600, Colors.teal.shade400],
              ),
              borderRadius: BorderRadius.circular(25),
            ),
            labelColor: Colors.white,
            unselectedLabelColor: Colors.grey.shade600,
            labelStyle: const TextStyle(fontWeight: FontWeight.bold),
            tabs: [
              Tab(
                child: _buildTabWithBadge(
                  Icons.pending_actions,
                  'Pendientes',
                  pendingCount,
                ),
              ),
              Tab(
                child: _buildTabWithBadge(
                  Icons.work,
                  'En Progreso',
                  inProgressCount,
                ),
              ),
              Tab(
                child: _buildTabWithBadge(
                  Icons.check_circle,
                  'Completadas',
                  completedCount,
                ),
              ),
            ],
          );
        },
      ),
    );
  }

  Widget _buildTabWithBadge(IconData icon, String label, int count) {
    return Row(
      mainAxisAlignment: MainAxisAlignment.center,
      mainAxisSize: MainAxisSize.min,
      children: [
        Icon(icon, size: 20),
        const SizedBox(width: 8),
        Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            Text(label),
            if (count > 0)
              Container(
                padding: const EdgeInsets.symmetric(horizontal: 6, vertical: 2),
                decoration: BoxDecoration(
                  color: Colors.orange.shade600,
                  borderRadius: BorderRadius.circular(10),
                  boxShadow: [
                    BoxShadow(
                      color: Colors.orange.withOpacity(0.3),
                      blurRadius: 4,
                      offset: const Offset(0, 2),
                    ),
                  ],
                ),
                child: Text(
                  '$count',
                  style: const TextStyle(
                    color: Colors.white,
                    fontSize: 11,
                    fontWeight: FontWeight.bold,
                  ),
                ),
              ),
          ],
        ),
      ],
    );
  }

  Widget _buildTaskList(String status) {
    return FadeTransition(
      opacity: _fadeAnimation,
      child: StreamBuilder<QuerySnapshot>(
        stream: _firestore
            .collection('tasks')
            .where('assignedTo', isEqualTo: widget.user.uid)
            .where('status', isEqualTo: status)
            .orderBy('dueDate')
            .snapshots(),
        builder: (context, snapshot) {
          if (snapshot.connectionState == ConnectionState.waiting) {
            return _buildSkeletonLoading();
          }

          if (snapshot.hasError) {
            return Center(
              child: Container(
                padding: const EdgeInsets.all(20),
                margin: const EdgeInsets.all(20),
                decoration: BoxDecoration(
                  color: Colors.red.shade50,
                  borderRadius: BorderRadius.circular(15),
                  border: Border.all(color: Colors.red.shade200),
                ),
                child: Column(
                  mainAxisSize: MainAxisSize.min,
                  children: [
                    Icon(Icons.error_outline,
                        color: Colors.red.shade600, size: 50),
                    const SizedBox(height: 16),
                    Text(
                      'Error al cargar tareas',
                      style: TextStyle(
                        color: Colors.red.shade600,
                        fontSize: 18,
                        fontWeight: FontWeight.bold,
                      ),
                    ),
                    const SizedBox(height: 8),
                    Text(
                      snapshot.error.toString(),
                      style: TextStyle(color: Colors.red.shade600),
                      textAlign: TextAlign.center,
                    ),
                  ],
                ),
              ),
            );
          }

          final tasks = snapshot.data?.docs
                  .map((doc) => TaskModel.fromFirestore(
                        doc.data() as Map<String, dynamic>,
                        doc.id,
                      ))
                  .toList() ??
              [];

          if (tasks.isEmpty) {
            return RefreshIndicator(
              onRefresh: () async {
                // Forzar recarga esperando un momento
                await Future.delayed(const Duration(milliseconds: 500));
              },
              color: Colors.green.shade600,
              child: SingleChildScrollView(
                physics: const AlwaysScrollableScrollPhysics(),
                child: SizedBox(
                  height: MediaQuery.of(context).size.height * 0.6,
                  child: _buildEmptyState(status),
                ),
              ),
            );
          }

          // Separar tareas: Admin primero, Personales después
          final adminTasks = tasks.where((task) => !task.isPersonal).toList();
          final personalTasks = tasks.where((task) => task.isPersonal).toList();

          return RefreshIndicator(
            onRefresh: () async {
              // Forzar recarga esperando un momento
              await Future.delayed(const Duration(milliseconds: 500));
            },
            color: Colors.green.shade600,
            child: ListView(
              padding: const EdgeInsets.all(16),
              physics: const AlwaysScrollableScrollPhysics(),
              children: [
                if (adminTasks.isNotEmpty) ...[
                  _buildSectionHeader('Tareas del Administrador',
                      adminTasks.length, Colors.red),
                  const SizedBox(height: 12),
                  ...adminTasks.asMap().entries.map((entry) {
                    return _buildModernTaskCard(entry.value, entry.key);
                  }),
                  if (personalTasks.isNotEmpty) const SizedBox(height: 24),
                ],
                if (personalTasks.isNotEmpty) ...[
                  _buildSectionHeader(
                      'Tareas Personales', personalTasks.length, Colors.purple),
                  const SizedBox(height: 12),
                  ...personalTasks.asMap().entries.map((entry) {
                    return _buildModernTaskCard(entry.value, entry.key);
                  }),
                ],
              ],
            ),
          );
        },
      ),
    );
  }

  Widget _buildSkeletonLoading() {
    return ListView.builder(
      padding: const EdgeInsets.all(16),
      itemCount: 5,
      itemBuilder: (context, index) {
        return Container(
          margin: const EdgeInsets.only(bottom: 16),
          padding: const EdgeInsets.all(16),
          decoration: BoxDecoration(
            color: Colors.white,
            borderRadius: BorderRadius.circular(16),
            boxShadow: [
              BoxShadow(
                color: Colors.grey.withOpacity(0.1),
                blurRadius: 10,
                offset: const Offset(0, 4),
              ),
            ],
          ),
          child: Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Row(
                children: [
                  _buildSkeletonBox(60, 24),
                  const Spacer(),
                  _buildSkeletonBox(80, 20),
                ],
              ),
              const SizedBox(height: 12),
              _buildSkeletonBox(double.infinity, 16),
              const SizedBox(height: 8),
              _buildSkeletonBox(200, 14),
              const SizedBox(height: 12),
              Row(
                children: [
                  _buildSkeletonBox(100, 30),
                  const SizedBox(width: 8),
                  _buildSkeletonBox(100, 30),
                ],
              ),
            ],
          ),
        );
      },
    );
  }

  Widget _buildSkeletonBox(double width, double height) {
    return Container(
      width: width,
      height: height,
      decoration: BoxDecoration(
        color: Colors.grey.shade200,
        borderRadius: BorderRadius.circular(8),
      ),
      child: AnimatedContainer(
        duration: const Duration(milliseconds: 1000),
        curve: Curves.easeInOut,
        decoration: BoxDecoration(
          borderRadius: BorderRadius.circular(8),
          gradient: LinearGradient(
            begin: Alignment.centerLeft,
            end: Alignment.centerRight,
            colors: [
              Colors.grey.shade200,
              Colors.grey.shade100,
              Colors.grey.shade200,
            ],
            stops: const [0.0, 0.5, 1.0],
          ),
        ),
      ),
    );
  }

  Widget _buildEmptyState(String status) {
    String message;
    IconData icon;
    Color color;

    switch (status) {
      case 'pending':
        message = '¡Genial! No tienes tareas pendientes';
        icon = Icons.pending_actions;
        color = Colors.orange;
        break;
      case 'completed':
        message = 'Aún no has completado ninguna tarea';
        icon = Icons.check_circle;
        color = Colors.green;
        break;
      default:
        message = 'No hay tareas';
        icon = Icons.task_alt;
        color = Colors.grey;
    }

    return Center(
      child: Container(
        padding: const EdgeInsets.all(32),
        margin: const EdgeInsets.all(20),
        decoration: BoxDecoration(
          gradient: LinearGradient(
            colors: [color.withOpacity(0.1), color.withOpacity(0.05)],
          ),
          borderRadius: BorderRadius.circular(20),
          border: Border.all(color: color.withOpacity(0.3)),
        ),
        child: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            Container(
              padding: const EdgeInsets.all(20),
              decoration: BoxDecoration(
                color: color.withOpacity(0.2),
                borderRadius: BorderRadius.circular(30),
              ),
              child: Icon(icon, size: 60, color: color),
            ),
            const SizedBox(height: 24),
            Text(
              message,
              style: TextStyle(
                fontSize: 18,
                fontWeight: FontWeight.bold,
                color: color,
              ),
              textAlign: TextAlign.center,
            ),
            const SizedBox(height: 12),
            if (status == 'pending')
              Text(
                'Toca el botón + para crear una nueva tarea',
                style: TextStyle(
                  fontSize: 14,
                  color: Colors.grey.shade600,
                ),
                textAlign: TextAlign.center,
              ),
          ],
        ),
      ),
    );
  }

