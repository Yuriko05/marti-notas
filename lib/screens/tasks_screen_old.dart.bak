  Future<void> _createTask(
      String title, String description, DateTime dueDate) async {
    if (title.trim().isEmpty) {
      _showErrorSnackbar('El título es obligatorio');
      return;
    }

    try {
      await _firestore.collection('tasks').add({
        'title': title.trim(),
        'description': description.trim(),
        'dueDate': dueDate,
        'assignedTo': widget.user.uid,
        'createdBy': widget.user.uid,
        'isPersonal': true,
        'status': 'pending',
        'createdAt': FieldValue.serverTimestamp(),
      });

      if (!mounted) return;
      Navigator.pop(context);
      _showSuccessSnackbar('Tarea creada exitosamente');
    } catch (e) {
      _showErrorSnackbar('Error al crear tarea: $e');
    }
  }

  Future<void> _updateTask(
      String taskId, String title, String description, DateTime dueDate) async {
    if (title.trim().isEmpty) {
      _showErrorSnackbar('El título es obligatorio');
      return;
    }

    try {
      await _firestore.collection('tasks').doc(taskId).update({
        'title': title.trim(),
        'description': description.trim(),
        'dueDate': dueDate,
      });

      if (!mounted) return;
      Navigator.pop(context);
      _showSuccessSnackbar('Tarea actualizada exitosamente');
    } catch (e) {
      _showErrorSnackbar('Error al actualizar tarea: $e');
    }
  }
