  Future<void> _updateTaskStatus(String taskId, String newStatus) async {
    try {
      final updateData = <String, dynamic>{
        'status': newStatus,
      };

      // Si se está completando la tarea, agregar timestamp de completado
      if (newStatus == 'completed') {
        updateData['completedAt'] = FieldValue.serverTimestamp();

        await _firestore.collection('tasks').doc(taskId).update(updateData);
        _showSuccessSnackbar(
            'Tarea completada. Se eliminará automáticamente en 24 horas.');
      } else {
        // Para otros estados, limpiar completedAt si existe
        updateData['completedAt'] = null;

        await _firestore.collection('tasks').doc(taskId).update(updateData);
        _showSuccessSnackbar('Tarea actualizada correctamente');
      }
    } catch (e) {
      _showErrorSnackbar('Error al actualizar tarea: $e');
    }
  }

  Future<void> _deleteTask(String taskId) async {
    try {
      // Obtener datos de la tarea antes de eliminar
      final taskDoc = await _firestore.collection('tasks').doc(taskId).get();
      final taskData = taskDoc.data();

      if (taskData == null) {
        _showErrorSnackbar('Error: Tarea no encontrada');
        return;
      }

      // Eliminar la tarea
      await _firestore.collection('tasks').doc(taskId).delete();

      if (!mounted) return;

      // Mostrar SnackBar con opción de deshacer
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Row(
            children: [
              const Icon(Icons.delete, color: Colors.white),
              const SizedBox(width: 8),
              const Text('Tarea eliminada'),
            ],
          ),
          backgroundColor: Colors.orange.shade600,
          behavior: SnackBarBehavior.floating,
          shape:
              RoundedRectangleBorder(borderRadius: BorderRadius.circular(10)),
          duration: const Duration(seconds: 4),
          action: SnackBarAction(
            label: 'DESHACER',
            textColor: Colors.white,
            onPressed: () async {
              // Restaurar la tarea
              try {
                await _firestore.collection('tasks').doc(taskId).set(taskData);
                if (!mounted) return;
                _showSuccessSnackbar('Tarea restaurada');
              } catch (e) {
                if (!mounted) return;
                _showErrorSnackbar('Error al restaurar: $e');
              }
            },
          ),
        ),
      );
    } catch (e) {
      if (!mounted) return;
      _showErrorSnackbar('Error al eliminar tarea: $e');
    }
  }

