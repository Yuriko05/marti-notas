    Color statusColor;
    String statusText;
    IconData statusIcon;
    Gradient statusGradient;

    switch (task.status) {
      case 'pending':
        statusColor = const Color(0xFFf093fb);
        statusText = 'Pendiente';
        statusIcon = Icons.schedule;
        statusGradient = const LinearGradient(
            colors: [Color(0xFFf093fb), Color(0xFFf5576c)]);
        break;
      case 'in_progress':
        statusColor = const Color(0xFF4facfe);
        statusText = 'En Progreso';
        statusIcon = Icons.autorenew;
        statusGradient = const LinearGradient(
            colors: [Color(0xFF4facfe), Color(0xFF00f2fe)]);
        break;
      case 'completed':
        statusColor = const Color(0xFF43e97b);
        statusText = 'Completada';
        statusIcon = Icons.check_circle;
        statusGradient = const LinearGradient(
            colors: [Color(0xFF43e97b), Color(0xFF38f9d7)]);
        break;
      case 'confirmed':
        statusColor = const Color(0xFF667eea);
        statusText = 'Confirmada';
        statusIcon = Icons.verified;
        statusGradient = const LinearGradient(
            colors: [Color(0xFF667eea), Color(0xFF764ba2)]);
        break;
      case 'rejected':
        statusColor = const Color(0xFFfc4a1a);
        statusText = 'Rechazada';
        statusIcon = Icons.cancel;
        statusGradient = const LinearGradient(
            colors: [Color(0xFFfc4a1a), Color(0xFFf7b733)]);
        break;
      default:
        statusColor = Colors.grey;
        statusText = 'Desconocido';
        statusIcon = Icons.help;
        statusGradient =
            const LinearGradient(colors: [Colors.grey, Colors.grey]);
    }

    final isOverdue = task.isOverdue;

