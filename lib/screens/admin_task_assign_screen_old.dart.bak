  /// Badge de estado actual de la tarea (Pendiente/En Progreso/Completada)
  Widget _buildTaskStatusBadge(TaskModel task) {
    IconData icon;
    String label;
    Color color;

    switch (task.status) {
      case 'pending':
        icon = Icons.schedule;
        label = 'PENDIENTE';
        color = Colors.orange;
        break;
      case 'in_progress':
        icon = Icons.autorenew;
        label = 'EN PROGRESO';
        color = Colors.blue;
        break;
      case 'completed':
        icon = Icons.check_circle;
        label = 'COMPLETADA';
        color = Colors.green;
        break;
      case 'confirmed':
        icon = Icons.verified;
        label = 'CONFIRMADA';
        color = Colors.teal;
        break;
      case 'rejected':
        icon = Icons.cancel;
        label = 'RECHAZADA';
        color = Colors.red;
        break;
      default:
        icon = Icons.help;
        label = 'DESCONOCIDO';
        color = Colors.grey;
    }

    return Container(
      padding: const EdgeInsets.symmetric(horizontal: 10, vertical: 6),
      decoration: BoxDecoration(
        gradient: LinearGradient(
          colors: [
            color,
            Color.lerp(color, Colors.black, 0.2)!,
          ],
        ),
        borderRadius: BorderRadius.circular(8),
        boxShadow: [
          BoxShadow(
            color: color.withOpacity(0.3),
            blurRadius: 4,
            offset: const Offset(0, 2),
          ),
        ],
      ),
      child: Row(
        mainAxisSize: MainAxisSize.min,
        children: [
          Icon(icon, color: Colors.white, size: 14),
          const SizedBox(width: 6),
          Text(
            label,
            style: const TextStyle(
              color: Colors.white,
              fontSize: 11,
              fontWeight: FontWeight.bold,
            ),
          ),
        ],
      ),
    );
  }

  String _formatReadTime(DateTime readAt) {
    final now = DateTime.now();
    final diff = now.difference(readAt);

    if (diff.inMinutes < 1) {
      return 'Ahora';
    } else if (diff.inHours < 1) {
      return '${diff.inMinutes}m';
    } else if (diff.inDays < 1) {
      return '${diff.inHours}h';
    } else {
      return '${diff.inDays}d';
    }
  }

  void _showAssignTaskDialog() {
    if (users.isEmpty) {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: const Row(
            children: [
              Icon(Icons.warning, color: Colors.white),
              SizedBox(width: 8),
              Text('No hay usuarios disponibles para asignar tareas'),
            ],
          ),
          backgroundColor: const Color(0xFFfc4a1a),
          behavior: SnackBarBehavior.floating,
          shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(8)),
        ),
      );
      return;
    }

    final formKey = GlobalKey<FormState>();
    final titleController = TextEditingController();
    final descriptionController = TextEditingController();
    DateTime selectedDate = DateTime.now().add(const Duration(days: 7));
    String? selectedUserId;

    showDialog(
      context: context,
      builder: (context) {
        return StatefulBuilder(
          builder: (context, dialogSetState) {
            return AlertDialog(
              shape: RoundedRectangleBorder(
                  borderRadius: BorderRadius.circular(16)),
              title: const Text('Asignar Nueva Tarea'),
              content: SingleChildScrollView(
                child: Form(
                  key: formKey,
                  child: Column(
                    mainAxisSize: MainAxisSize.min,
                    children: [
                      // T√≠tulo
                      TextFormField(
                        controller: titleController,
                        decoration: const InputDecoration(
                          labelText: 'T√≠tulo de la tarea',
                          border: OutlineInputBorder(),
                          prefixIcon: Icon(Icons.title),
                        ),
                        validator: (value) {
                          if (value == null || value.trim().isEmpty) {
                            return 'El t√≠tulo es requerido';
                          }
                          return null;
                        },
                      ),
                      const SizedBox(height: 16),

                      // Descripci√≥n
                      TextFormField(
                        controller: descriptionController,
                        maxLines: 3,
                        decoration: const InputDecoration(
                          labelText: 'Descripci√≥n',
                          border: OutlineInputBorder(),
                          prefixIcon: Icon(Icons.description),
                        ),
                        validator: (value) {
                          if (value == null || value.trim().isEmpty) {
                            return 'La descripci√≥n es requerida';
                          }
                          return null;
                        },
                      ),
                      const SizedBox(height: 16),

                      // Usuario
                      DropdownButtonFormField<String>(
                        value: selectedUserId,
                        decoration: const InputDecoration(
                          labelText: 'Asignar a usuario',
                          border: OutlineInputBorder(),
                          prefixIcon: Icon(Icons.person),
                        ),
                        hint: const Text('Selecciona un usuario'),
                        items: users.map((user) {
                          return DropdownMenuItem(
                            value: user.uid,
                            child: Text(user.name),
                          );
                        }).toList(),
                        validator: (value) {
                          if (value == null) {
                            return 'Debes seleccionar un usuario';
                          }
                          return null;
                        },
                        onChanged: (value) {
                          dialogSetState(() => selectedUserId = value);
                        },
                      ),
                      const SizedBox(height: 16),

                      // Fecha
                      InkWell(
                        onTap: () async {
                          final picked = await showDatePicker(
                            context: context,
                            initialDate: selectedDate,
                            firstDate: DateTime.now(),
                            lastDate:
                                DateTime.now().add(const Duration(days: 365)),
                          );
                          if (picked != null) {
                            dialogSetState(() => selectedDate = picked);
                          }
                        },
                        child: InputDecorator(
                          decoration: const InputDecoration(
                            labelText: 'Fecha de vencimiento',
                            border: OutlineInputBorder(),
                            prefixIcon: Icon(Icons.calendar_today),
                          ),
                          child: Text(_formatDate(selectedDate)),
                        ),
                      ),
                    ],
                  ),
                ),
              ),
              actions: [
                TextButton(
                  onPressed: () => Navigator.pop(context),
                  child: const Text('Cancelar'),
                ),
                ElevatedButton(
                  onPressed: () {
                    if (formKey.currentState!.validate() &&
                        selectedUserId != null) {
                      // Usar fecha con hora por defecto (23:59)
                      final dueDateTime = DateTime(
                        selectedDate.year,
                        selectedDate.month,
                        selectedDate.day,
                        23,
                        59,
                      );

                      _assignTask(
                        context,
                        formKey,
                        titleController.text,
                        descriptionController.text,
                        selectedUserId!,
                        dueDateTime,
                      );
                    }
                  },
                  child: const Text('Asignar Tarea'),
                ),
              ],
            );
          },
        );
      },
    );
  }

  Future<void> _assignTask(
    BuildContext dialogContext,
    GlobalKey<FormState> formKey,
    String title,
    String description,
    String userId,
    DateTime dueDate,
  ) async {
    if (!formKey.currentState!.validate()) return;

    // Mostrar loading simple
    showDialog(
      context: dialogContext,
      barrierDismissible: false,
      builder: (context) => const Center(
        child: Card(
          child: Padding(
            padding: EdgeInsets.all(20),
            child: Column(
              mainAxisSize: MainAxisSize.min,
              children: [
                CircularProgressIndicator(),
                SizedBox(height: 16),
                Text('Asignando tarea...'),
              ],
            ),
          ),
        ),
      ),
    );

    final taskId = await AdminService.assignTaskToUser(
      title: title,
      description: description,
      assignedToUserId: userId,
      dueDate: dueDate,
    );

    if (!mounted) return;
    Navigator.pop(dialogContext); // Cerrar loading
    Navigator.pop(dialogContext); // Cerrar dialog

    if (taskId != null) {
      // Enviar notificaci√≥n inmediata al usuario asignado
      try {
        await NotificationService.showInstantTaskNotification(
          taskTitle: title,
          userName: users.firstWhere((u) => u.uid == userId).name,
        );
      } catch (e) {
        print('Error enviando notificaci√≥n instant√°nea: $e');
      }

      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: const Row(
            children: [
              Icon(Icons.check_circle, color: Colors.white),
              SizedBox(width: 8),
              Text('Tarea asignada y notificaci√≥n enviada'),
            ],
          ),
          backgroundColor: const Color(0xFF43e97b),
          behavior: SnackBarBehavior.floating,
          shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(8)),
          margin: const EdgeInsets.all(16),
        ),
      );
      _loadData(); // Recargar lista
    } else {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: const Row(
            children: [
              Icon(Icons.error, color: Colors.white),
              SizedBox(width: 8),
              Text('Error al asignar tarea'),
            ],
          ),
          backgroundColor: const Color(0xFFfc4a1a),
          behavior: SnackBarBehavior.floating,
          shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(8)),
          margin: const EdgeInsets.all(16),
        ),
      );
    }
  }

